@if (Character != null)
{
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Style="margin-bottom: 1rem;">
        @{
            bool available = Character.DungeonRewardsAvailableAt == null || Character.DungeonRewardsAvailableAt <= DateTime.UtcNow;
        }
        <RadzenSplitButton ButtonStyle="@(available ? ButtonStyle.Primary : ButtonStyle.Danger)" Text="@(available ? "LOOT" : TimeLeft())" Click="OnClick" Style="width: 200px;">
            <ChildContent>
                <RadzenSplitButtonItem Text="Delete character" Value="delete" />
                @if (!available)
                {
                    <RadzenSplitButtonItem Text="Reset timer" Value="reset"/>
                }
            </ChildContent>
        </RadzenSplitButton>
        <RadzenLabel Text="@Character.Name"/>
    </RadzenStack>
}